{
  "name": "FBforschung.de Browser-Plugin",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Dieses Browser-Plugin sammelt selektiv öffentliche Informationen der Facebook-Nutzung für das Forschungsprojekt FBforschung.de.",
  "icons": {
    "16": "images/icon-16-inactive.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "*://*.fbforschung.de/*"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "16":"images/icon-16-inactive.png"
    },
    "default_title": "FBforschung.de",
    "default_popup": "information.html"
  }
}
